<!-- Validation failure messages -->

<% if @location.errors.any? %>
<% @location.errors.full_messages.each do |message| %>
<div class="alert alert-dismissable alert-danger">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
  <%= message %>
</div>
<% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit Location #<%= @location.id %></h3>
      </div>
      <div class="panel-body">
        <form action="/update_location/<%= @location.id %>" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for activity_id -->
          <div class="form-group">
            <label for="activity_id" class="col-sm-2 control-label">
              Activity
            </label>
            <div class="col-sm-10">
            <%= select_tag(:activity_id, options_from_collection_for_select(Activity.all, :id, :name, @location.activity_id), :class => "form-control") %>
            </div>
          </div>

          <!-- Label and input for city -->
          <div class="form-group">
            <label for="place" class="col-sm-2 control-label">
              Name
            </label>
            <div class="col-sm-10">
              <input type="text" id="city" name="city" placeholder="Name" class="form-control" value="<%= @location.city %>">
            </div>
          </div>

          <!-- Label and input for country -->
          <div class="form-group">
            <label for="country" class="col-sm-2 control-label">
              Region
            </label>
            <div class="col-sm-10">
              <input type="text" id="country" name="country" placeholder="City/State, Country" class="form-control" value="<%= @location.country %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-warning">
                Update Location
              </button>
              or
              <a href="/locations/<%= @location.id %>">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
