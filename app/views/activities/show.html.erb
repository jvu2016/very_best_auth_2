<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Activity #<%= @activity.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Name</dt>
              <dd><%= @activity.name %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/activities" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>

              <a href="/activities/<%= @activity.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

              <a href="/delete_activity/<%= @activity.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>

<h4>Location(s)</h4>
<div class="row">
  <ol>
    <% @locations.each do |location| %>

    <li>
      <strong> Name</strong>:<a target="_blank" href="https://www.google.com/search?btnG=1&pws=0&q=<%= location.city %>"><%= location.city %></a><br />
      <strong> Region</strong>:<%= location.country %>
    </li>

    <% end %>
  </ol>
</div>

<h4>Suggested Thing(s) to Buy</h4>
<div class="row">
 <ol>
  <% @items.each do |item| %>

  <li>
    <strong> Name</strong>: <a target="_blank"  href="https://www.google.com/search?btnG=1&pws=0&q=<%= item.name %>"> <%= item.name %> </a><br />
    <strong> Description</strong>: <%= item.description %> <br />
    <strong> Necessity Rating</strong>: <%= item.necessity_rating %>
  </li>

  <% end %>
</ol>
</div>
<!-- End responsive panel example -->
