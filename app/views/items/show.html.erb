<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Item #<%= @item.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Name</dt>
              <dd><%= @item.name %></dd>

              <dt>Description</dt>
              <dd><%= @item.description %></dd>

              <dt>Activity</dt>
              <dd><%= @activities.find(@item.activity_id).name %></dd>

              <dt>Necessity Rating</dt>
              <dd><%= @item.necessity_rating %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/items" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>
            </div>
          </div>
        </div>
      </div>

      <ul class="list-group">
        <% @item.favorites.each do |favorite| %>
        <li class="list-group-item">
          <%= favorite.user.username %> likes <%= favorite.venue.name %>
        </li>
        <% end %>
      </ul>

    </div>
  </div>
</div>

<!-- End responsive panel example -->
